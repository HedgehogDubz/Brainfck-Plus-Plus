{
    "tasks": [
        {
            "type": "shell",
            "label": "Build brainfck",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "brainfck.cpp",
                "-o",
                "brainfck"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build brainfck.cpp with C++17"
        },
        {
            "type": "shell",
            "label": "Build and Run brainfck",
            "command": "clang++ -std=c++17 -g brainfck.cpp -o brainfck && ./brainfck bfpps/test.bfpp",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            }
        }
    ],
    "version": "2.0.0"
}